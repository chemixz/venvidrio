<div class="row">
  <div class="col-xs-12">
    <div class="col-xs-12    col-sm-7 col-sm-offset-7    col-md-6 col-md-offset-8  ">
      <%= form_tag( index_search_areas_path, class: 'navbar-form navbar-left'   ) do %>
        <div class="form-group">
          <input type="text" class="form-control"  name="searcher[textsearch]" placeholder="Buscar">
          <input type="hidden" name="searcher[item_search]"  class="form-control">
        </div>
        <div class="form-group">
          <select name="searcher[field]"  class="form-control" >
           <option value="name"> Nombre </option>
           <option value="ubication"> Ubicación </option>
          </select>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary" class="form-control">
            <span class="glyphicon glyphicon-search"></span>
          </button>
          
      </div>
      <% end %>
    </div>
    <p id="notice"><%= render 'partials/notices' %></p>

    <h1>Lista de Áreas</h1>
     <%= link_to 'Nueva Área', new_area_path, class: "btn btn-success" %>
      <div class="text-center">
        <%= will_paginate @areas,  :previous_label => "« Anterior", :next_label=> "Siguiente »"%>
      </div>
    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th class="col-sm-40">Nombre</th>
            <th class="col-sm-40">Ubicación</th>
            <th class="col-sm-1" colspan="3"> Acciones </th>
          </tr>
        </thead>

        <tbody>
          <% @areas.each do |area| %>
            <tr>
              <td><%= area.name %></td>
              <td><%= area.ubication %></td>
              <td><p class="text-center"><%= link_to "<span class=\"glyphicon glyphicon-sunglasses blue\"></span>".html_safe, area %></p></td>
              <td><p class="text-center"><%= link_to "<span class=\"glyphicon glyphicon-edit green\"></span>".html_safe, edit_area_path(area) %></p></td>
              <td><p class="text-center"><%= link_to "<span class=\"glyphicon glyphicon-trash red\"></span>".html_safe, area, id: area.id, method: :delete, data: { confirm: '¿Estas Seguro?' } %></p></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
     <div class="text-center">
        <%= will_paginate @areas,  :previous_label => "« Anterior", :next_label=> "Siguiente »"%>
      </div>
    <br>

   
    </div>
</div>
